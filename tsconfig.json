{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitUseStrict": true,
    // true - не вставлять в начало кода "use strict" - extjs начинает глючить (callParent)
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ]
}
